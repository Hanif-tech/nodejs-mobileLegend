<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hero List</title>
    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />

    <!-- My Css -->
    <link rel="stylesheet" href="../assets/css/style.css" />
  </head>
  <body class="body-index">
    <div class="container mb-4 py-5 px-5 shadow-sm">
      <h1 class="fw-bold"><%= heroes.title %></h1>
      <table class="shadow-sm mt-4 table table-dark table-striped">
        <tr class="text-center">
          <th>Id</th>
          <th>Nama</th>
          <th>Role</th>
          <th>Aksi</th>
        </tr>
        <% for(let i = 0; i < heroes.data.length; i++) { %>
        <tr class="text-center">
          <td><%= heroes.data[i].id %></td>
          <td><%= heroes.data[i].name %></td>
          <td><%= heroes.data[i].role %></td>
          <td style="display: flex; justify-content: center">
            <a class="btn btn-primary me-3" href="/hero/<%= heroes.data[i].id %> ">Edit</a>
            <a class="btn btn-primary me-3" href="/skill/<%= heroes.data[i].id %> ">Skills</a>
            <form action="/hero/delete" method="post">
              <input hidden type="text" name="id" value="<%= heroes.data[i].id %> " />
              <button class="btn btn-primary" type="submit">Hapus</button>
            </form>
          </td>
        </tr>
        <% } %>
      </table>

      <h2 class="fw-bold mt-5">Tambah Data Hero</h2>
      <form action="/hero/add" method="post">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label fw-bold">Nama Hero</label>
          <input type="text" class="form-control" id="exampleInputEmail1" name="name" aria-describedby="namaHero" />
          <div id="namaHero" class="form-text">Masukkan nama hero</div>
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label fw-bold">Role</label>
          <input type="text" name="role" class="form-control" id="exampleInputPassword1" />
          <div id="namaHero" class="form-text">Masukkan role hero</div>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
  </body>
</html>
